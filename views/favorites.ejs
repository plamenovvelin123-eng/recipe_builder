<script>
async function loadfavorites() {
    const res = await fetch("/api/favorites/list");
    const favorites = await res.json();

    for (const id of favorites) {
        const mealRes = await fetch(`/api/favorites/${id}`);
        const meal = await mealRes.json();
        renderMeal(meal);
    }
}

function renderMeal(meal) {
    const container = document.getElementById("favorites-container");

    const card = document.createElement("div");
    card.className = "recipe-card";
    card.onclick = () => openModal(meal);
    card.innerHTML = `
        <div class="recipe-heart">‚ù§Ô∏è</div>
        <img src="${meal.strMealThumb}" alt="${meal.strMeal}" class="recipe-image">
        <div class="recipe-content">
            <h2 class="recipe-title">${meal.strMeal}</h2>
        </div>
    `;
    
    container.appendChild(card);
}

// Extract ingredients from meal object
function extractIngredients(meal) {
    const ingredients = [];
    for (let i = 1; i <= 20; i++) {
        const ingredient = meal[`strIngredient${i}`];
        const measure = meal[`strMeasure${i}`];
        
        if (ingredient && ingredient.trim() !== '') {
            ingredients.push(`${measure ? measure.trim() + ' ' : ''}${ingredient.trim()}`);
        }
    }
    return ingredients;
}

let currentMealId = null;

function openModal(meal) {
    currentMealId = meal.idMeal;
    
    document.getElementById("modalImage").src = meal.strMealThumb;
    document.getElementById("modalTitle").textContent = meal.strMeal;
    document.getElementById("modalCategory").textContent = meal.strCategory || 'Not specified';
    document.getElementById("modalArea").textContent = meal.strArea || 'Not specified';
    document.getElementById("modalInstructions").textContent = meal.strInstructions || 'No instructions available.';

    const ingContainer = document.getElementById("modalIngredients");
    ingContainer.innerHTML = "";
    
    // Extract ingredients from the meal object
    const ingredients = extractIngredients(meal);
    
    if (ingredients.length > 0) {
        ingredients.forEach(ingredient => {
            const div = document.createElement("div");
            div.className = "ingredient-item";
            div.textContent = ingredient;
            ingContainer.appendChild(div);
        });
    } else {
        ingContainer.innerHTML = '<div class="ingredient-item">No ingredients listed</div>';
    }

    document.getElementById("mealModal").style.display = "block";
    
    // Close modal when clicking outside
    document.getElementById("mealModal").onclick = function(e) {
        if (e.target === this) {
            closeModal();
        }
    };
    
    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeModal();
        }
    });
}

function closeModal() {
    document.getElementById("mealModal").style.display = "none";
}

function logout(){
    fetch('logout', {
        method: "POST",
        credentials: "include"
    })
    .then(() => {
        window.location.href = "/logintest";
    })
}

loadfavorites();
async function removeFav(mealId) {
    await fetch(`/api/favorites/${mealId}`, {
        method: "DELETE"
    });
    closeModal(); 
    location.reload(); 
}
function shopping() {
    window.open(
        `/api/favorites/shopping/${currentMealId}`,
        'shoppingWindow',
        'width=600,height=300,menubar=no,toolbar=no,location=no,status=no'
    );
}
async function changeUsername() {
    const newUsername = document.getElementById("newUsername").value.trim();
    try {
        const response = await fetch("/users/update/username", {
            method: "POST",
            credentials: "include",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ newUsername })
        });
        const raw = await response.text();
        const data = JSON.parse(raw);
        if (!response.ok) {
            alert(data.message);
            return;
        }
        document.querySelector(".header-left").textContent = `Hello, ${newUsername}!`;
        closeAccountModal();
        setTimeout(() => location.reload(), 200);
    } catch (err) {
        alert("Network error");
    }
}
async function changePassword() {
    const currentPassword = document.getElementById("currentPassword").value.trim()
    const newPassword = document.getElementById("newPassword").value.trim()
    const confirmPassword = document.getElementById("confirmPassword").value.trim()
    if(newPassword !== confirmPassword){
        console.log(newPassword)
        console.log(confirmPassword)
        alert("The passwords does not match!")
        return
    }
    try{
        const response = await fetch("/users/update/password",{
            method: "POST",
            credentials: "include",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ currentPassword, newPassword })
        });
        const data = await response.json()
        if(!response.ok){
            alert(data.message)
            return
        }
        alert("Password updated successfully!");
        document.getElementById("currentPassword").value = "";
        document.getElementById("newPassword").value = "";
        document.getElementById("confirmPassword").value = "";
        closeAccountModal()

    }catch(err){
        alert("Server Error!")
    }

}

function openAccountModal() {
    document.getElementById("accountModal").style.display = "block";
}

function closeAccountModal() {
    document.getElementById("accountModal").style.display = "none";
}

document.addEventListener("keydown", function(e) {
    if (e.key === "Escape") {
        closeAccountModal();
    }
});


</script>

