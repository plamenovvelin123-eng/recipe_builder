    .favorites-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        padding: 120px 15px 15px;
    }

    .modal-content {
        width: 90%;
        margin: 20px auto;
    }
    
    .modal-body {
        flex-direction: column;
    }
    
    .modal-image-container {
        flex: 0 0 250px;
    }
    
