<script>
async function loadMeals() {
    try {
        const res = await fetch("/api");
        const meals = await res.json();
        
        const container = document.getElementById("container");
        container.innerHTML = "";

        if (meals == null || meals.length === 0) {
            container.innerHTML = '<div class="loading">No meals found.</div>';
            return;
        }
    
        meals.forEach(meal => {
            const div = document.createElement("div");
            div.className = "meal-card";

            div.innerHTML = `
                <img src="${meal.strMealThumb}" alt="${meal.strMeal}" class="meal-image">
                <div class="meal-content">
                    <h3 class="meal-title">${meal.strMeal}</h3>
                    <div class="meal-info">
                        <span class="meal-category">${meal.strCategory}</span>
                        <span class="meal-area">${meal.strArea}</span>
                    </div>
                    <button class="fav-btn" data-meal-id="${meal.idMeal}" onclick="toggleFav(this)">
                            ‚ù§ Add to favourites
                    </button>

                    <button class="info-btn" onclick="openModal(${JSON.stringify(meal).replace(/"/g, '&quot;')})">‚Ñπ View Info</button>
                </div>
            `;

            container.appendChild(div);
        });
    } catch (error) {
        console.error("Error loading meals:", error);
        document.getElementById("container").innerHTML = 
            '<div class="loading">Error loading meals. Please try again.</div>';
    }
}

// Toggle favourite
function toggleFav(btn) {
    const idMeal = btn.getAttribute("data-meal-id");

    
    if (!btn.classList.contains("fav")) {
        btn.classList.add("fav");
        btn.textContent = "‚úì Favourite";

        fetch(`/api/favorites/${idMeal}`, {
            method: "POST",
            credentials: "include"
        });

    } else {
        btn.classList.remove("fav");
        btn.textContent = "‚ù§ Add to favourites";
        fetch(`/api/favorites/${idMeal}`, {
            method: "DELETE",
            credentials: "include"
        });
    }
}



// Extract ingredients from meal object
function extractIngredients(meal) {
    const ingredients = [];
    for (let i = 1; i <= 20; i++) {
        const ingredient = meal[`strIngredient${i}`];
        const measure = meal[`strMeasure${i}`];
        
        if (ingredient && ingredient.trim() !== '') {
            ingredients.push(`${measure ? measure.trim() + ' ' : ''}${ingredient.trim()}`);
        }
    }
    return ingredients;
}

// Open enhanced modal
function openModal(meal) {
    document.getElementById("modalImage").src = meal.strMealThumb;
    document.getElementById("modalTitle").textContent = meal.strMeal;
    document.getElementById("modalCategory").textContent = meal.strCategory;
    document.getElementById("modalArea").textContent = meal.strArea;
    document.getElementById("modalInstructions").textContent = meal.strInstructions;

    const ingContainer = document.getElementById("modalIngredients");
    ingContainer.innerHTML = "";
    
    // Extract ingredients from the meal object
    const ingredients = extractIngredients(meal);
    
    if (ingredients.length > 0) {
        ingredients.forEach(ingredient => {
            const div = document.createElement("div");
            div.className = "ingredient-item";
            div.textContent = ingredient;
            ingContainer.appendChild(div);
        });
    } else {
        ingContainer.innerHTML = '<div class="ingredient-item">No ingredients listed</div>';
    }

    document.getElementById("mealModal").style.display = "block";
    
    // Close modal when clicking outside
    document.getElementById("mealModal").onclick = function(e) {
        if (e.target === this) {
            closeModal();
        }
    };
    
    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeModal();
        }
    });
}

// Close modal
function closeModal() {
    document.getElementById("mealModal").style.display = "none";
}

